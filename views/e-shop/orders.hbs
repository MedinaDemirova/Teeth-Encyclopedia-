<h1 class="headermain">Orders to complete</h1>

<div class="div">
    {{#unless orders }}
    <h4>No orders to complete </h4>
    <a class="btn-back" href="/e-shop" class="btn btn-info">Shop now!</a>

    {{else}}

    <a href="/e-shop/order/empty-orders-list"><button class="btn btn-info">Empty orders list</button></a>

    <div class="table-basket">
        <table>
            <tr>
                <th>Order ID</th>
                <th>Emai</th>
                <th>Phone number</th>
                <th>Adress</th>
                <th>User ID</th>
                <th>Show products</th>
            </tr>

            {{#each orders}}
            <tr>
                <td>{{_id}}</td>
                <td>{{email}}</td>
                <td>{{phone}}</td>
                <td>{{adress}}</td>
                 <td>{{userID}}</td>
                 <td><a href="/e-shop/order/{{_id}}/details">Products to send</a></td>
            </tr>
            {{/each}}

        </table>
    </div>
    {{/unless}}
</div>