<div class="form-group">
    <label for="name">Name:</label>
    <input required value="{{product.name}}" type="text" name="name" id="name" class="form-control">
</div>

<div class="form-group">
    <label for="price">Price (euro)</label>
    <textarea required name="price" id="price" class="form-control"> {{product.price}}</textarea>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control">{{product.description}}</textarea>
</div>


<div class="form-group">
    <label for="imageURL">Image</label>
    <textarea required name="imageURL" id="imageURL" class="form-control">{{product.imageURL}}</textarea>
</div>

<label for="category">Choose a category:</label>
<select name="category" id="category" >
  <option value="Tooth brush">Toothbrush</option>
  <option value="Dental Floss">Dental Floss</option>
  <option value="Toothpaste">Toothpaste</option>
  <option value="Teeth Whitening">Teeth Whitening</option>
  <option  selected value="Others">Others</option>
</select>

<a href="/teeth/gallery" class="btn btn-secondary" >Cancel</a>
<button type="submit" class="btn btn-primary" >Save</button>