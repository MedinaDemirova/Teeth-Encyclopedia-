<div class="form-group">
    <label for="name">Name:</label>
    <input required value="{{tooth.name}}" type="text" name="name" id="name" class="form-control">
</div>


<div class="form-group">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control">{{tooth.description}}</textarea>
</div>


<div class="form-group">
    <label for="imageURL">Image</label>
    <textarea required name="imageURL" id="imageURL" class="form-control">{{tooth.imageURL}}</textarea>
</div>


<a href="/teeth/gallery" class="btn btn-secondary" >Cancel</a>
<button type="submit" class="btn btn-primary" >Save</button>